<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dayName"
            android:layout_width="219dp"
            android:layout_height="29dp"
            android:text="@string/defaultDay"
            android:textColor="@color/dark_blue"
            android:textFontWeight="700"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dayWeatherIcon"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dayWeatherIcon"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="218dp"
            android:layout_height="35dp"
            android:text="@string/defaultTemperature"
            android:textColor="@color/light_grey"
            android:textFontWeight="500"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/dayWeatherIcon"
            app:layout_constraintEnd_toEndOf="@+id/dayName"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/dayName"
            app:layout_constraintTop_toBottomOf="@+id/dayName"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/dayWeatherIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>